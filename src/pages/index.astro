---

<Layout>
	<LandingHeader/> 
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
	
		
		
	<div class="snap-center">
		<SectionModel3/>
	</div>
	


    <div class="snap-center">
		<SectionModelx/>


	</div>
		
	</main>	
    


		
</Layout>
<script>
	const slider = document.querySelector(".slider") as HTMLElement;
	const slides = document.querySelectorAll(".slider img");
	const prev = document.querySelector(".prev");
	const next = document.querySelector(".next");
	const dotsContainer = document.querySelector(".dots");

	let index = 0;

	// Crear puntos de navegación
	slides.forEach((_, i) => {
		const dot = document.createElement("span");
		dot.classList.add("dot");
		if (i === 0) dot.classList.add("active");
		dot.addEventListener("click", () => moveToSlide(i));
		dotsContainer.appendChild(dot);
	});

	const dots = document.querySelectorAll(".dot");

	function updateDots() {
		dots.forEach(dot => dot.classList.remove("active"));
		dots[index].classList.add("active");
	}

	function moveToSlide(n) {
		index = (n + slides.length) % slides.length;
		if (slider) {
			slider.style.transform = `translateX(${-index * 100}%)`;
		}
		updateDots();
	}

	prev.addEventListener("click", () => moveToSlide(index - 1));
	next.addEventListener("click", () => moveToSlide(index + 1));

	setInterval(() => moveToSlide(index + 1), 3000); // Cambio automático cada 3 segundos
</script>
